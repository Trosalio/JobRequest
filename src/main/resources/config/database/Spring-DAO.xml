<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Import .xml of Datasource -->
    <import resource="Spring-Datasource.xml" />

    <!-- Scanning components for the configs-->
    <context:component-scan base-package="server.serviceImpl"/>

    <!-- Instantiate DAO Beans -->
    <bean id="advertiseDAO" class="server.persistence.AdvertiseDAO">
        <constructor-arg index="0" ref="dataSource"/>
        <constructor-arg index="1" ref="jobDAO"/>
    </bean>
    <bean id="jobDAO" class="server.persistence.JobDAO">
        <constructor-arg index="0" ref="dataSource"/>
        <constructor-arg index="1" ref="stationDAO"/>
    </bean>
    <bean id="stationDAO" class="server.persistence.StationDAO">
        <constructor-arg ref="dataSource"/>
    </bean>
</beans>