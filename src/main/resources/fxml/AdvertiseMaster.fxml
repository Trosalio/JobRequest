    <center>
        <TableView fx:id="adsTable" onMouseClicked="#onMouseClicked" prefHeight="467.0" prefWidth="622.0">
            <columns>
                <TableColumn fx:id="issueDateCol" editable="false" maxWidth="1.7976931348623157E308" prefWidth="123.0"
                             text="Issue Date"/>
                <TableColumn fx:id="refNoCol" editable="false" maxWidth="1.7976931348623157E308" prefWidth="203.0"
                             text="Ref No."/>
                <TableColumn fx:id="nameCol" editable="false" maxWidth="1.7976931348623157E308" prefWidth="298.0"
                             text="Ads Name"/>
            </columns>
        </TableView>
    </center>
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="65.0" prefWidth="800.0" spacing="10.0"
              style="-fx-background-color: #e3e3e3; -fx-border-width: 0 0 1 0; -fx-border-color: #7e7070;"
              BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <padding>
                <Insets left="30.0" right="30.0"/>
            </padding>
            <Label text="Advertise Table">
                <font>
                    <Font size="20.0"/>
                </font>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Label>
            <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAdd" prefHeight="34.0" prefWidth="124.0"
                    style="-fx-background-color: #f14949;" text="ADD NEW ADS" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Button>
        </HBox>
    </top>
    <right>
        <VBox fx:id="detailPane" prefHeight="535.0" prefWidth="375.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="30.0" right="30.0" top="20.0"/>
            </padding>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <VBox.margin>
                    <Insets bottom="15.0"/>
                </VBox.margin>
                <Label fx:id="refNoLabel" text="CEO/12300/043/59">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1">
                    <Button fx:id="editButton" mnemonicParsing="false" onAction="#onEdit" prefHeight="30.0"
                            prefWidth="75.0" style="-fx-background-color: #33c1ff;" text="Edit" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Button>
                </HBox>
            </GridPane>
            <HBox spacing="40.0">
                <Label prefHeight="17.0" prefWidth="70.0" text="Name">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="nameLabel" layoutX="10.0" layoutY="10.0" prefHeight="20.0" prefWidth="195.0"
                       text="Green Student Green Card" textFill="#505050" wrapText="true">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </HBox>
            <Separator prefWidth="200.0"/>
            <HBox spacing="40.0">
                <Label prefWidth="70.0" text="Issue Date">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="issueDateLabel" layoutX="10.0" layoutY="10.0" prefWidth="195.0" text="31/01/2018"
                       textFill="#505050" wrapText="true">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </HBox>
            <Separator layoutX="25.0" layoutY="114.0" prefWidth="200.0"/>
            <HBox spacing="40.0">
                <Label layoutX="10.0" layoutY="10.0" prefHeight="17.0" prefWidth="70.0" text="Job ID">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="JobIdLabel" prefWidth="195.0" text="Not yet request" textFill="#505050" wrapText="true">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </HBox>
            <Separator prefWidth="200.0"/>
            <HBox layoutX="40.0" layoutY="160.0" spacing="40.0">
                <Label layoutX="10.0" layoutY="10.0" prefHeight="17.0" prefWidth="70.0" text="Job Status">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="JobStatusLabel" prefWidth="195.0" text="Not yet request" textFill="#505050"
                       wrapText="true">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </HBox>
            <Separator layoutX="40.0" layoutY="187.0" prefWidth="200.0"/>
            <HBox alignment="CENTER_LEFT">
                <Hyperlink fx:id="deleteLink" onAction="#onDelete" text="Delete This Ads" textFill="#ea2323">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Hyperlink>
            </HBox>
        </VBox>
    </right>
</BorderPane>
