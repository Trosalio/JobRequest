<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8"
            fx:controller="client.ui.view.StartupView">
    <center>
        <VBox alignment="CENTER" spacing="80.0" BorderPane.alignment="CENTER">
            <Button mnemonicParsing="false" onAction="#onMOClicked" prefHeight="60.0" prefWidth="280.0"
                    text="Job Requester" BorderPane.alignment="CENTER">
                <font>
                    <Font size="24.0"/>
                </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#onCMOClicked" prefHeight="60.0" prefWidth="280.0"
                    text="Job Reviewer">
                <font>
                    <Font size="24.0"/>
                </font>
            </Button>
        </VBox>
    </center>
    <top>
        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER">
            <Image url="@../image/bts_logo.png"/>
        </ImageView>
    </top>
</BorderPane>
