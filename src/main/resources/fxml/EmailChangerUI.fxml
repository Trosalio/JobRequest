    <Label text="Receiver E-mail:" />
    <TextField fx:id="receiverTxtF" GridPane.columnIndex="1">
        <GridPane.margin>
          <Insets left="10.0" right="10.0" />
        </GridPane.margin>
    </TextField>
    <FlowPane alignment="CENTER" hgap="50.0" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2147483647" GridPane.rowIndex="1">
        <Button mnemonicParsing="false" onAction="#onChange" text="Change" />
        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
    </FlowPane>
