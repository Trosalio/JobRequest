<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
    Project Name: Memo
-->

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainController">
    <center>
        <ScrollPane fitToWidth="true" prefWidth="682.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
            <TableView fx:id="memoTable" onMouseClicked="#onMouseClicked">
                <columns>
                    <TableColumn fx:id="cDateColumn" maxWidth="1.7976931348623157E308" prefWidth="100.0"
                                 style="-fx-alignment: CENTER;" text="Created Date"/>
                    <TableColumn fx:id="subjColumn" maxWidth="1.7976931348623157E308" prefWidth="205.0" text="Subject"/>
                    <TableColumn fx:id="refNoColumn" maxWidth="1.7976931348623157E308" prefWidth="100.0"
                                 style="-fx-alignment: CENTER;" text="Ref No."/>
                    <TableColumn fx:id="sDateColumn" maxWidth="1.7976931348623157E308" prefWidth="100.0"
                                 style="-fx-alignment: CENTER;" text="Start Date"/>
                    <TableColumn fx:id="eDateColumn" maxWidth="1.7976931348623157E308" prefWidth="100.0"
                                 style="-fx-alignment: CENTER;" text="End Date"/>
                    <TableColumn fx:id="formsColumn" maxWidth="1.7976931348623157E308" prefWidth="50.0"
                                 style="-fx-alignment: CENTER;" text="Forms"/>
                </columns>
            </TableView>
        </ScrollPane>
    </center>
    <top>
        <BorderPane BorderPane.alignment="CENTER">
            <right>
                <HBox spacing="10.0" BorderPane.alignment="CENTER">
                    <Button fx:id="editButton" disable="true" mnemonicParsing="false" onAction="#onEdit"
                            prefHeight="50.0" prefWidth="50.0" text="Edit"/>
                    <Button mnemonicParsing="false" onAction="#onAdd" prefHeight="50.0" prefWidth="75.0" text="Add"/>
                </HBox>
            </right>
            <left>
                <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" onAction="#onDelete" prefHeight="50.0" prefWidth="75.0" text="Delete" BorderPane.alignment="CENTER" />
            </left>
        </BorderPane>
    </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
